<%
// load footer options and contacts from content
const footer = _.cms('footer') || {}
const contacts = _.cms('contacts') || {}

// social networks handled by contacts
const networksWithColors = [
  ['facebook', '#3b5998'],
  ['youtube', '#ff0000'],
  ['instagram', '#e1306c'],
  ['twitter', '#1da1f2'],
  ['pinterest', '#bd081c'],
  ['linkedin', '#0073b1']
]
%>
<div style="background-image: url(https://assets.xtechcommerce.com/assets/120299/1557853140/img/mid_newsfundo.png); background-repeat: repeat-x; background-size: contain; background-position: center;">
  <div style="background-color: rgba(255, 255, 255, 0.15); padding-bottom: 40px;">
  <div style="background-image: url(https://assets.xtechcommerce.com/assets/120299/1557853140/img/top_menurepeticao.png); background-repeat: repeat-x;  background-position: bottom center; height: 10px;"></div>
  <div class="container text-center">
  <div>
            <span style="display: block;text-transform: uppercase;font-size: 52px;font-family: Oswald;font-style: normal;font-weight: lighter;letter-spacing: 5px;margin-top: 40px;line-height: 60px;">NEWSLETTER</span>
            <span style="font-family: 'Raleway', sans-serif; font-size: 14px; line-height: 20px;">RECEBA NOSSAS OFERTAS E NOVIDADES POR EMAIL</span>
        </div>
<form action="https://www.drickafashion.com.br/contact/newsletter_signup" method="post" accept-charset="utf-8">
                              <div class="input-group" style="width: 80%;margin: 15px auto 0;border: none;background-color: #fff;border-radius: 25px;overflow: hidden;padding: 5px;box-shadow: 0px 0px 40px #caa5a5;">
                                <input type="text" name="email" id="newsletter" placeholder="Insira seu e-mail" class="form-control" style="border-radius: 0px;border: none;background-color: transparent;font-size: 16px;text-transform: capitalize;font-weight: 300;letter-spacing: 0px;color: #61605f;">
                                <span class="input-group-btn">
                                  <button type="submit" class="btn btn-sub" style="box-shadow: none;border-radius: 0px;background-color: transparent;font-size: 16px;font-weight: 300;border: none;color: #caa5a5;text-align: right;TEXT-TRANSFORM: UPPERCASE;letter-spacing: 2px;font-family: 'Oswald', sans-serif;">
                                    Assinar 
                                  </button>
